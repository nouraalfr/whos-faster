<!doctype html>
<html lang="ar" dir="rtl" class="dark">
  <%- include('head.ejs') -%>

  <body class="flex min-h-screen flex-col bg-gray-50 dark:bg-gray-900">
    <%- include('nav.ejs') -%>

    <div class="container mx-auto flex max-w-xs flex-grow flex-col items-center justify-center space-y-4">
      <!-- Errors -->
      <% if (locals.errors) { %>
      <div class="w-full rounded-lg border border-red-400 bg-red-100 px-4 py-2 dark:border-red-800 dark:bg-red-900/50">
        <% errors.forEach(error => { %>
        <div class="text-red-600 dark:text-red-400"><%= error.msg %></div>
        <% }) %>
      </div>
      <% } %>

      <div class="w-full rounded-lg border border-gray-200 bg-white p-6 shadow-lg dark:border-gray-700 dark:bg-gray-800">
        <form method="post" class="w-full space-y-4">
          <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
          <div>
            <input type="username" name="username" placeholder="الاسم" class="w-full rounded-lg border border-gray-200 bg-white px-4 py-1 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-1 focus:valid:ring-blue-600 focus:invalid:ring-red-600 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200 dark:placeholder-gray-400 dark:focus:valid:ring-blue-500 dark:focus:invalid:ring-red-500" required autofocus minlength="3" autocomplete="username" />
          </div>

          <div>
            <input type="password" name="password" placeholder="كلمة المرور" class="w-full rounded-lg border border-gray-200 bg-white px-4 py-1 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-1 focus:valid:ring-blue-600 focus:invalid:ring-red-600 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200 dark:placeholder-gray-400 dark:focus:valid:ring-blue-500 dark:focus:invalid:ring-red-500" required minlength="8" autocomplete="new-password" />
          </div>

          <div>
            <input type="password" name="confirm_password" placeholder="التحقق من كلمة المرور" class="w-full rounded-lg border border-gray-200 bg-white px-4 py-1 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-1 focus:valid:ring-blue-600 focus:invalid:ring-red-600 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200 dark:placeholder-gray-400 dark:focus:valid:ring-blue-500 dark:focus:invalid:ring-red-500" required minlength="8" autocomplete="new-password" />
          </div>

          <div>
            <button type="submit" class="t flex w-full items-center justify-center rounded-lg bg-purple-500 px-4 py-1.5 text-white hover:bg-purple-400 hover:text-white dark:bg-blue-600 dark:text-gray-100 dark:hover:bg-blue-500 dark:hover:text-white">إنشاء حساب</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
